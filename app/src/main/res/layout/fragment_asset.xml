<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.aksoyhakn.reportplus.ui.main.asset.AssetViewModel" />

        <variable
            name="fragment"
            type="com.aksoyhakn.reportplus.ui.main.asset.AssetFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/StyleBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBack"
            onSafeClick="@{()->fragment.clickBack()}"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            style="@style/StyleBackButtonBackgroundColor"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/tvExpertDetailTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvExpertDetailTitle" />

        <ImageView
            style="@style/StyleBackgroundImage"
            android:layout_width="600dp"
            android:layout_height="400dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            android:translationX="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvExpertDetailTitle" />

        <TextView
            android:id="@+id/tvExpertDetailTitle"
            style="@style/StyleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:text="@{viewModel.title}"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            bind:setImageCache="@{viewModel.data.getImageURL()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvExpertDetailTitle" />


        <com.tistory.zladnrms.roundablelayout.RoundableLayout
            android:id="@+id/rlOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            app:backgroundColor="@color/lightBackgroundColor"
            app:cornerAll="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivInfo"
            app:strokeLineColor="@color/solitude"
            app:strokeLineWidth="1dp">


            <TextView
                android:id="@+id/tvAssetName"
                style="@style/StyleBoldText20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@{viewModel.data.assetName + ` Genel Bakış `}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTrend"
                style="@style/StyleMediumText14_Antrasit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Trend Yönü"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAssetName" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:progressBarStyleHorizontal"
                progressAnimation="@{true}"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:elevation="3dp"
                android:progressDrawable="@drawable/progress_bar"
                android:rotation="-90"
                app:layout_constraintBottom_toBottomOf="@+id/rlImage"
                app:layout_constraintEnd_toEndOf="@+id/rlImage"
                app:layout_constraintStart_toStartOf="@+id/rlImage"
                app:layout_constraintTop_toTopOf="@+id/rlImage" />

            <com.tistory.zladnrms.roundablelayout.RoundableLayout
                android:id="@+id/rlImage"
                setRoundableDirectionColor="@{viewModel.data.direction}"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                app:backgroundColor="@color/white"
                app:cornerAll="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTrend"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTrend">

                <ImageView
                    setDirection="@{viewModel.data.direction}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.tistory.zladnrms.roundablelayout.RoundableLayout>

            <TextView
                android:id="@+id/tvPivot"
                style="@style/StyleMediumText14_Antrasit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Pivot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTrend" />

            <TextView
                android:id="@+id/tvPivotAmount"
                style="@style/StyleMediumText12_Antrasit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@{viewModel.data.pivotPrice}"
                app:layout_constraintBottom_toBottomOf="@+id/tvPivot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPivot" />

            <TextView
                android:id="@+id/tvTarget"
                style="@style/StyleMediumText14_Antrasit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Pozitif senaryo hedef fiyat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPivot" />

            <TextView
                android:id="@+id/tvTargetAmount"
                style="@style/StyleMediumText12_Antrasit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@{viewModel.data.targetPrice}"
                app:layout_constraintBottom_toBottomOf="@+id/tvTarget"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTarget" />

            <TextView
                android:id="@+id/tvStopLoss"
                style="@style/StyleMediumText14_Antrasit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Negatif senaryo hedef fiyat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTarget" />

            <TextView
                android:id="@+id/tvStopLossAmount"
                style="@style/StyleMediumText12_Antrasit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@{viewModel.data.stopLossPrice}"
                app:layout_constraintBottom_toBottomOf="@+id/tvStopLoss"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvStopLoss" />


        </com.tistory.zladnrms.roundablelayout.RoundableLayout>

        <com.tistory.zladnrms.roundablelayout.RoundableLayout
            android:id="@+id/rvInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            app:backgroundColor="@color/lightBackgroundColor"
            app:cornerAll="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlOverview"
            app:strokeLineColor="@color/solitude"
            app:strokeLineWidth="1dp">


            <TextView
                style="@style/StyleMediumText14_DarkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLines="10"
                android:text="@{viewModel.data.explanation}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </com.tistory.zladnrms.roundablelayout.RoundableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>