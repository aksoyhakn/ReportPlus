<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.aksoyhakn.reportplus.ui.main.journal.model.JournalResponse" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/clJournal"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="@android:color/transparent">


        <com.tistory.zladnrms.roundablelayout.RoundableLayout
            android:id="@+id/rlJournal"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            app:cornerAll="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeLineColor="@color/solitude"
            app:strokeLineWidth="1dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:background="@drawable/item_journal" />

            <com.tistory.zladnrms.roundablelayout.RoundableLayout
                android:id="@+id/rlImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:backgroundColor="@color/white"
                app:cornerLeftBottom="30dp"
                app:cornerRightBottom="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeLineColor="@color/solitude"
                app:strokeLineWidth="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    bind:setImageCache="@{item.getImageURL()}" />

            </com.tistory.zladnrms.roundablelayout.RoundableLayout>


            <TextView
                android:id="@+id/tvTitle"
                style="@style/StyleBoldText20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="@{item.videoTitle}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlImage" />

        </com.tistory.zladnrms.roundablelayout.RoundableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/view"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/rlJournal"
            android:background="@android:color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>