<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.trendline.ui.main.indicator.model.IndicatorYoutubeResponse" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="@android:color/transparent">


        <com.tistory.zladnrms.roundablelayout.RoundableLayout
            android:id="@+id/rlIndicatorDetail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:backgroundColor="@color/white"
            app:cornerAll="30dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeLineColor="@color/solitude"
            app:strokeLineWidth="1dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:background="@drawable/item_journal" />


            <com.tistory.zladnrms.roundablelayout.RoundableLayout
                android:id="@+id/rlImage"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                app:backgroundColor="@color/white"
                app:cornerAll="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeLineColor="@color/solitude"
                app:strokeLineWidth="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    bind:setImageCache="@{item.getImageURL()}" />

            </com.tistory.zladnrms.roundablelayout.RoundableLayout>


            <TextView
                android:id="@+id/tvTitle"
                style="@style/StyleMediumText14_DarkGrey"
                android:layout_width="0dp"
                android:maxLines="3"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{item.description}"
                app:layout_constraintBottom_toBottomOf="@+id/rlImage"
                app:layout_constraintStart_toEndOf="@+id/rlImage"
                app:layout_constraintTop_toTopOf="@+id/rlImage" />


        </com.tistory.zladnrms.roundablelayout.RoundableLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/rlIndicatorDetail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>