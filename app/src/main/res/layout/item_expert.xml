<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.aksoyhakn.reportplus.ui.main.expert.model.ExpertResponse" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="@android:color/transparent">


        <com.tistory.zladnrms.roundablelayout.RoundableLayout
            android:id="@+id/rlExpert"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:backgroundColor="@color/lightBackgroundColor"
            app:cornerAll="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:strokeLineColor="@color/solitude"
            app:strokeLineWidth="1dp">

            <ProgressBar
                android:id="@+id/progress"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="3dp"
                android:rotation="-90"
                progressAnimation="@{true}"
                android:progressDrawable="@drawable/progress_bar"
                app:layout_constraintBottom_toBottomOf="@+id/rlImage"
                app:layout_constraintEnd_toEndOf="@+id/rlImage"
                app:layout_constraintStart_toStartOf="@+id/rlImage"
                app:layout_constraintTop_toTopOf="@+id/rlImage" />


            <com.tistory.zladnrms.roundablelayout.RoundableLayout
                android:id="@+id/rlImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                app:cornerAll="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeLineColor="@color/solitude"
                app:strokeLineWidth="1dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    bind:setImageCache="@{item.userPhoto}" />

            </com.tistory.zladnrms.roundablelayout.RoundableLayout>

            <TextView
                style="@style/StyleMediumText14_Antrasit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@{item.userName}"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/rlImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rlImage"
                app:layout_constraintTop_toTopOf="@+id/rlImage" />


        </com.tistory.zladnrms.roundablelayout.RoundableLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/rlExpert" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>