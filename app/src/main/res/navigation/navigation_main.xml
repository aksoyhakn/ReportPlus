<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_dashboard"
    app:startDestination="@+id/navigation_main">

    <fragment
        android:id="@+id/navigation_main"
        android:name="com.aksoyhakn.reportplus.ui.main.main.MainFragment"
        android:label="@string/title_experts"
        tools:layout="@layout/fragment_main" >

        <action
            android:id="@+id/action_navigation_main_to_profile"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right" />

    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.aksoyhakn.reportplus.ui.main.search.SearchFragment"
        android:label="@string/title_journal"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_navigation_search_to_download"
            app:destination="@id/downloadFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right" />

    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.aksoyhakn.reportplus.ui.main.settings.SettingsFragment"
        android:label="@string/title_indicator"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/downloadFragment"
        android:name="com.aksoyhakn.reportplus.ui.main.download.DownloadFragment"
        android:label="Download"
        tools:layout="@layout/fragment_download" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.aksoyhakn.reportplus.ui.main.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>